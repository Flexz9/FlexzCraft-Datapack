{
    "type": "origins:multiple",
    "name": "Drying Out",
    "description": "You will become dry after a long time without touching water. Dryness makes you vulnerable, and prevents other powers from working. You stay hydrated by entering water, drinking potions, or having fire resistance.",
    "badge": {
        "type": "origins:tooltip",
        "sprite": "origins:textures/gui/badge/info.png",
        "text": "This ability is affected by Drying Out."
    },

    "time_left": {
        "type": "origins:resource",
        "max": 6000,
        "min": 0,
        "start_value": 6000,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 1,
            "order": 3
        }
    },

    "is_dry": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 0,
        "hud_render": {
            "should_render": false
        }
    },

    "tick_time_left": {
        "type": "origins:action_over_time",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:if_else_list",
                    "actions": [
                        {
                            "condition": {
                                "type": "origins:status_effect",
                                "effect": "minecraft:fire_resistance"
                            },
                            "action": {
                                "type": "origins:change_resource",
                                "resource": "*:*_time_left",
                                "change": 0
                            }
                        },
                        {
                            "condition": {
                                "type": "origins:dimension",
                                "dimension": "minecraft:the_nether"
                            },
                            "action": {
                                "type": "origins:change_resource",
                                "resource": "*:*_time_left",
                                "change": -40
                            }
                        },
                        {
                            "condition": {
                                "type": "origins:constant",
                                "value": true
                            },
                            "action": {
                                "type": "origins:change_resource",
                                "resource": "*:*_time_left",
                                "change": -20
                            }
                        }
                    ]
                },
                {
                    "type": "origins:if_else",
                    "condition": {
                        "type": "origins:resource",
                        "resource": "*:*_time_left",
                        "comparison": "==",
                        "compare_to": 0
                    },
                    "if_action": {
                        "type": "origins:and",
                        "actions": [
                            {
                                "type": "origins:change_resource",
                                "resource": "*:*_is_dry",
                                "change": 1,
                                "operation": "set"
                            },
                            {
                                "type": "origins:spawn_particles",
                                "particle": "minecraft:large_smoke",
                                "count": 10,
                                "spread": {
                                    "x": 1,
                                    "y": 1.5,
                                    "z": 1
                                }
                            }
                        ]
                    },
                    "else_action": {
                        "type": "origins:change_resource",
                        "resource": "*:*_is_dry",
                        "change": 0,
                        "operation": "set"
                    }
                }
            ]
        },
        "interval": 20
    },

    "drink_potion": {
        "type": "origins:action_on_item_use",
        "item_condition": {
            "type": "apoli:ingredient",
            "ingredient": {
              "item": "minecraft:potion"
            }
        },
        "trigger": "finish",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_time_left",
            "change": 300
        }
    },

    "in_rain": {
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:in_rain"
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_time_left",
            "change": 100
        },
        "interval": 20
    },

    "in_water": {
        "type": "origins:action_over_time",
        "condition": {
            "type": "origins:in_block_anywhere",
            "block_condition": {
                "type": "origins:or",
                "conditions": [
                    {
                        "type": "origins:block",
                        "block": "minecraft:water"
                    },
                    {
                        "type": "origins:block",
                        "block": "minecraft:still_water"
                    }
                ]
            },
            "comparison" :">",
            "compare_to": 0
        },
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:*_time_left",
            "change": 300
        },
        "interval": 10
    },

    "hydrate_on_respawn": {
        "type": "origins:action_on_callback",
        "entity_action_respawned": {
            "type": "origins:change_resource",
            "resource": "*:*_time_left",
            "change": 1200
        }
    },

    "dry_shakes": {
        "type": "origins:shaking",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_dry",
            "comparison": "==",
            "compare_to": 1
        }
    },

    "dry_health": {
        "type": "origins:conditioned_attribute",
        "condition": {
            "type": "origins:resource",
            "resource": "*:*_is_dry",
            "comparison": "==",
            "compare_to": 1
        },
        "modifier": {
            "attribute": "minecraft:generic.max_health",
            "operation": "multiply_total",
            "value": -0.45
        },
        "update_health": true
    }
}